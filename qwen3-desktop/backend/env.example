# Qwen 3 Desktop Assistant Backend Configuration

# 기본 설정
DEBUG=false
HOST=127.0.0.1
PORT=8000

# CORS 설정
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Qwen 모델 설정
QWEN_MODEL_PATH=/path/to/your/qwen/model
QWEN_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
QWEN_DEVICE=auto
QWEN_MAX_LENGTH=2048
QWEN_TEMPERATURE=0.7
QWEN_TOP_P=0.9
QWEN_REPETITION_PENALTY=1.1

# MCP 설정
MCP_CONFIG_PATH=../mcp_servers/config

# 파일 업로드 설정
UPLOAD_DIR=../data/uploads
MAX_FILE_SIZE=104857600
# ALLOWED_FILE_TYPES=text/plain,text/markdown,application/pdf,image/jpeg,image/png

# 보안 설정
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=../data/logs/app.log

# 데이터베이스 설정 (선택사항)
# DATABASE_URL=sqlite:///./app.db

# API 키 설정 (필요한 경우)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key

# 외부 서비스 설정
# SEARCH_API_KEY=your-search-api-key
# WEATHER_API_KEY=your-weather-api-key
